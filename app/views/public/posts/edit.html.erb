<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿情報編集</h1>
      <%= form_with model: @post do |f| %>

      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title,autofocus: true,class: "form-control" %><br>

      <%= f.label :body,"本文" %>
      <%= f.text_area :body,class: "form-control" %><br>

      <%= f.submit "編集",class: "btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>
