<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<%= render "info",customer: @customer %>

<%= render "public/posts/new",post: @post %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>投稿一覧</h1>

      <table class="table">
        <tr>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan="2"></th>
        </tr>

        <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title,post_path(post.id) %></td>
          <td><%= post.body %></td>
          <% if post.customer_id == current_customer.id %>
          <td><%= link_to "編集",edit_post_path(post.id),class: "btn btn-success" %></td>
          <td><%= link_to "削除",post_path(post.id),method: :delete,"data-confirm"=>"本当に削除しますか?",class: "btn btn-danger" %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

